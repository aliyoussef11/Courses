
@model Courses.ViewModels.NewStudentViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create New Student</h2>

@using (Html.BeginForm("CreateNewStudent", "Students"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Student.FirstName)
        @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.LastName)
        @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.DateOfBirth)
        @Html.TextBoxFor(m => m.Student.DateOfBirth, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.AdmissionCodeId)
        @Html.DropDownListFor(m => m.Student.AdmissionCodeId, new SelectList(Model.admissionTermCodes, "AdmissionCodeId", "AdmissionCodeId"),
        "Select Your Admission Term Code", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.MajorId)
        @Html.DropDownListFor(m => m.Student.MajorId, new SelectList(Model.majors, "MajorId", "Name"),
        "Select Your Major", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Create</button>

}

