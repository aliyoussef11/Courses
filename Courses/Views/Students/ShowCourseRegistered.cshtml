@model IEnumerable<Courses.Models.Enrollment>

@{
    ViewBag.Title = "Show Courses Registered";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Show Course Registered</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AdmissionTermCode.Semester)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Major.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrolledIndicator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentIndicator)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AdmissionTermCode.Semester)
