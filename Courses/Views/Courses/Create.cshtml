@model Courses.ViewModels.NewCourseViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create New Course</h2>

@using (Html.BeginForm("CreateNewCourse", "Courses"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Course.CourseName)
        @Html.TextBoxFor(m => m.Course.CourseName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Course.Credits)
        @Html.TextBoxFor(m => m.Course.Credits, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Course.DepartmentId)
        @Html.DropDownListFor(m => m.Course.DepartmentId, new SelectList(Model.departments, "DepartmentId", "DepartmentName"),
        "Select Your Department Name", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
}


